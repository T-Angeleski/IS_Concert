@model List<ConcertLab.Web.Models.Concert>

@{
    ViewData["Title"] = "Index";
}

<h1>All Concerts</h1>

<div style="container">
    <p style="display: flex; justify-content: space-between">
        <a class="btn btn-primary" asp-action="Create">Create a new concert</a>
        <a class="btn btn-primary" asp-controller="ConcertTickets" asp-action="Create">Buy a ticket</a>
    </p>
</div>

<div class="container">
    @for(int i = 0; i < Model.Count; i++) {
        var item = Model[i];
        if(i % 3 == 0) {
            @:<div class="row">
        }
        
        <div class="col-4 md-4">
            <div class="card" style="width: 18rem;">
              <img src="@Model[i].ImageURL" class="card-img-top" alt="...">
              <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <p class="card-text">@item.Place</p>
                <p class="card-text">Price: @item.Price</p>
                <p class="card-text">Date: @item.Date.ToString()</p>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>  |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>  |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>  
              </div>
            </div>
        </div>
    

        @if(i % 3 == 2) {
            @:</div>
        } 
    }
</div>
